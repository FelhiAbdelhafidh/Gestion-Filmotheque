{# empty Twig template #}
{%extends "FilmBundle::accueil.html.twig" %}
{% block body %}
<h1 >Liste des acteurs</h1>
<a href="{{path('ajout_act_route')}}" >Ajout Acteur</a>

<table width="40%" >
    <thead>
        <tr > 
            <th>Id</th> 
            <th>Nom </th>
            <th>Prenomom</th>
            <th>Date Naissance </th>
            <th>Sexe</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for act in acts %}
            <tr>
                <td>{{act.id}} </td><td>{{act.nom}} </td>
                <td>{{act.prenom}} </td>
                <td>{{act.datenaissance|date("d/M/Y")}} </td>
                <td>
                    {% if act.sexe=='H' %}Homme
                    {% else  %} Femme
                    {% endif%}
                </td>
                <td>
                    <ul>
                        <li><a href="{{path('modif_act_route',{ 'id': act.getId()})}}" >Edit</a>
                        </li>  
                        <li>
                            <a  href="{{path('supp_act_route',{ 'id': act.getId()})}}" onclick="return confirm('are u sure deleting this post?')">Delete</a>

                        </li>
                    </ul> 



                </td>
            </tr>   
        {% endfor %}
    </tbody>


</table
{% endblock %}